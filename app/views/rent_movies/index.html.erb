<div class="container">
  <div>
   <div class="row">
     <form class="col s12">
       <div class="row">
         <div class="col s6 ">
           <p class="white-text"><%= current_user.email %> - Mis Peliculas</p>
         </div>
         <div class="row">
            <form class="col s12">
              <div class="row">
                <div class="input-field col s6">
                  <i class="material-icons prefix">search</i>
                  <input id="icon_prefix" type="text" class="validate">
                  <label for="icon_prefix">First Name</label>
                </div>
              </div>
            </form>
          </div>

       </div>
     </form>
   </div>
  </div>
  <div>
    <table class="white-text responsive-table">
     <thead>
       <tr>
           <th>#</th>
           <th>Peliculas</th>
           <th>Precio</th>

       </tr>
     </thead>

     <tbody>
       <% @rent_movies.each do |rent| %>
         <tr>
           <td><%= rent.id %></td>
           <td><%= rent.movie.name %></td>
           <td>S/. <%= rent.movie.price %></td>
         </tr>
       <% end %>
     </tbody>
   </table>

  </div>
  <div class="row white-text margin-top-20">
    <div class="col s12">
      <div class="col s6">
        <p>Monto gastado en alquiler</p>
      </div>
      <div class="col s6">
        <p>S/. <%= @total_rent %></p>
      </div>
    </div>
    <div class="col s12">
      <div class="col s6">
        <p>Peliculas alquiladas</p>
      </div>
      <div class="col s6">
        <p><%= @rent_movies.count %></p>
      </div>
    </div>
  </div>
</div>
