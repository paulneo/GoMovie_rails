<%= form_for @movie , url: url, method: method do |f| %>
  <div class="input-field col s12 m12 l12 ">
    <%=f.text_field :name , id:'name' ,type:'text' ,class:'validate'  %>
    <%= f.label :nombre%>
  </div>
  <div>
    <%= f.label :estrellas%>
    <%=f.number_field :star , id:'name' ,type:'number' ,class:'validate'  %>

  </div>
  <div class="input-field col s12 m12 l12">
    <%= f.select :category_id, Category.all.collect { |p| [ p.name, p.id ] }, {prompt: "Seleccione Categoria", id:'name', class:'validate'}  %>
    <%= f.label :category_id , "Género" %>
  </div>
  <div class="input-field col s12 m12 l12">
    <%= f.select :gender_id, Gender.all.collect { |p| [ p.name, p.id ] }, {prompt: "Seleccione Genero", id:'name', class:'validate'}  %>
    <%= f.label :gender_id , "Género" %>
  </div>
  <div>
    <%= f.label :precio%>
    <%=f.number_field :price , id:'name' ,class:'validate'  %>

  </div>
  <div class="input-field col s12 m12 l12 ">
    <%=f.text_field :sinopsys , id:'name' ,type:'text' ,class:'validate'  %>
    <%= f.label :sinopsis%>
  </div>
  <div class="input-field col s12 m12 l12 ">
    <%=f.text_field :time , id:'name' ,type:'text' ,class:'validate'  %>
    <%= f.label :tiempo %>
  </div>
  <div class="input-field col s12 m12 l12 " style="padding-bottom:20px">
    <%= f.file_field :image %>
    <%= f.label :imagen%>
  </div>
  <div class="col s12 m12 l12">
    <%= f.submit "Enviar", class:'waves-effect waves-light btn indigo'%>
  </div>
<%end%>
