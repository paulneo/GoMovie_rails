        <label >precio</label>
        <p>S/. <%= @movie.price%></p>
      </div>
      <div class="input-field col s12 m12 l12 ">
        <label >Tiempo de alquiler</label>
        <p><%= @movie.time%></p>
      </div>
      <div class="input-field col s12 m12 l12 ">
        <label >Sinopsis</label>
        <p class="padding-top-20px"><%= @movie.sinopsys%></p>
      </div>
      <div class="col s12 m12 l12">
        <a href="agregar_pelicula.html" class="right waves-effect waves-light btn indigo" style="width:100%">Aceptar</a>
      </div>
